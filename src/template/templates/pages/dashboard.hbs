<div class="dashboard-page">
    <!-- Header Section -->
    <section class="dashboard-header">
        <div class="container">
            <div class="header-content">
                <div class="user-info">
                    <div class="user-avatar">
                        <span>{{user.name.charAt 0}}</span>
                    </div>
                    <div>
                        <h1>Welcome back, {{user.name}}!</h1>
                        <p>{{user.email}}</p>
                    </div>
                </div>
                <div class="header-actions">
                    <button class="btn btn-secondary" id="refreshBtn">Refresh Data</button>
                    <button class="btn btn-primary" id="settingsBtn">Settings</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Cards -->
    <section class="stats-section">
        <div class="container">
            <div class="stats-grid">
                {{#each stats}}
                <div class="stat-card">
                    <div class="stat-icon">{{@index}}</div>
                    <div class="stat-content">
                        <div class="stat-value">{{value}}</div>
                        <div class="stat-label">{{label}}</div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </section>

    <!-- Main Dashboard Content -->
    <section class="dashboard-content">
        <div class="container">
            <div class="content-grid">
                <!-- Recent Activity -->
                <div class="dashboard-card">
                    <div class="card-header">
                        <h3>Recent Activity</h3>
                        <button class="btn btn-link">View All</button>
                    </div>
                    <div class="card-content">
                        <div class="activity-list">
                            <div class="activity-item">
                                <div class="activity-icon">üìß</div>
                                <div class="activity-content">
                                    <p>New message received</p>
                                    <span class="activity-time">2 hours ago</span>
                                </div>
                            </div>
                            <div class="activity-item">
                                <div class="activity-icon">üë•</div>
                                <div class="activity-content">
                                    <p>User registration completed</p>
                                    <span class="activity-time">4 hours ago</span>
                                </div>
                            </div>
                            <div class="activity-item">
                                <div class="activity-icon">‚öôÔ∏è</div>
                                <div class="activity-content">
                                    <p>System backup completed</p>
                                    <span class="activity-time">1 day ago</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="dashboard-card">
                    <div class="card-header">
                        <h3>Quick Actions</h3>
                    </div>
                    <div class="card-content">
                        <div class="actions-grid">
                            <button class="action-btn">
                                <span class="action-icon">‚ûï</span>
                                <span>Add User</span>
                            </button>
                            <button class="action-btn">
                                <span class="action-icon">üìä</span>
                                <span>View Reports</span>
                            </button>
                            <button class="action-btn">
                                <span class="action-icon">üì§</span>
                                <span>Export Data</span>
                            </button>
                            <button class="action-btn">
                                <span class="action-icon">üîß</span>
                                <span>System Settings</span>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Charts/Graphs Placeholder -->
                <div class="dashboard-card chart-card">
                    <div class="card-header">
                        <h3>Analytics Overview</h3>
                        <select class="time-selector">
                            <option>Last 7 days</option>
                            <option>Last 30 days</option>
                            <option>Last 3 months</option>
                        </select>
                    </div>
                    <div class="card-content">
                        <div class="chart-placeholder">
                            <div class="chart-content">
                                <span>üìà</span>
                                <h4>Interactive Charts</h4>
                                <p>Real-time analytics and insights</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Notifications -->
                <div class="dashboard-card">
                    <div class="card-header">
                        <h3>Notifications</h3>
                        <button class="btn btn-link">Mark All Read</button>
                    </div>
                    <div class="card-content">
                        <div class="notification-list">
                            <div class="notification-item unread">
                                <div class="notification-icon">üîî</div>
                                <div class="notification-content">
                                    <p>Server maintenance scheduled</p>
                                    <span class="notification-time">1 hour ago</span>
                                </div>
                            </div>
                            <div class="notification-item">
                                <div class="notification-icon">‚úÖ</div>
                                <div class="notification-content">
                                    <p>Backup completed successfully</p>
                                    <span class="notification-time">3 hours ago</span>
                                </div>
                            </div>
                            <div class="notification-item">
                                <div class="notification-icon">‚ö†Ô∏è</div>
                                <div class="notification-content">
                                    <p>High CPU usage detected</p>
                                    <span class="notification-time">1 day ago</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

